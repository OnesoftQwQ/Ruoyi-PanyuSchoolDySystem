<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.project.pyzx.student.mapper.PyzxStudentMapper">
    
    <resultMap type="PyzxStudent" id="PyzxStudentResult">
        <result property="studentId"    column="student_id"    />
        <result property="studentName"    column="student_name"    />
        <result property="studentNumber"    column="student_number"    />
        <result property="studentAge"    column="student_age"    />
        <result property="studentClasses"    column="student_Classes"    />
        <result property="studentTeacher"    column="student_teacher"    />
        <result property="studentSex"    column="student_sex"    />
        <result property="studentStatus"    column="student_status"    />
        <result property="studentBirthday"    column="student_birthday"    />
    </resultMap>

    <sql id="selectPyzxStudentVo">
        select student_id, student_name, student_number, student_age, student_Classes, student_teacher, student_sex, student_status, student_birthday from pyzx_student
    </sql>

    <select id="selectPyzxStudentList" parameterType="PyzxStudent" resultMap="PyzxStudentResult">
        <include refid="selectPyzxStudentVo"/>
        <where>  
            <if test="studentName != null  and studentName != ''"> and student_name like concat('%', #{studentName}, '%')</if>
            <if test="studentNumber != null  and studentNumber != ''"> and student_number = #{studentNumber}</if>
            <if test="studentAge != null "> and student_age = #{studentAge}</if>
            <if test="studentClasses != null  and studentClasses != ''"> and student_Classes = #{studentClasses}</if>
            <if test="studentTeacher != null  and studentTeacher != ''"> and student_teacher = #{studentTeacher}</if>
            <if test="studentSex != null  and studentSex != ''"> and student_sex = #{studentSex}</if>
            <if test="studentStatus != null  and studentStatus != ''"> and student_status = #{studentStatus}</if>
            <if test="studentBirthday != null "> and student_birthday = #{studentBirthday}</if>
        </where>
    </select>
    
    <select id="selectPyzxStudentByStudentId" parameterType="Long" resultMap="PyzxStudentResult">
        <include refid="selectPyzxStudentVo"/>
        where student_id = #{studentId}
    </select>

    <insert id="insertPyzxStudent" parameterType="PyzxStudent" useGeneratedKeys="true" keyProperty="studentId">
        insert into pyzx_student
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="studentName != null">student_name,</if>
            <if test="studentNumber != null">student_number,</if>
            <if test="studentAge != null">student_age,</if>
            <if test="studentClasses != null">student_Classes,</if>
            <if test="studentTeacher != null">student_teacher,</if>
            <if test="studentSex != null">student_sex,</if>
            <if test="studentStatus != null">student_status,</if>
            <if test="studentBirthday != null">student_birthday,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="studentName != null">#{studentName},</if>
            <if test="studentNumber != null">#{studentNumber},</if>
            <if test="studentAge != null">#{studentAge},</if>
            <if test="studentClasses != null">#{studentClasses},</if>
            <if test="studentTeacher != null">#{studentTeacher},</if>
            <if test="studentSex != null">#{studentSex},</if>
            <if test="studentStatus != null">#{studentStatus},</if>
            <if test="studentBirthday != null">#{studentBirthday},</if>
         </trim>
    </insert>

    <update id="updatePyzxStudent" parameterType="PyzxStudent">
        update pyzx_student
        <trim prefix="SET" suffixOverrides=",">
            <if test="studentName != null">student_name = #{studentName},</if>
            <if test="studentNumber != null">student_number = #{studentNumber},</if>
            <if test="studentAge != null">student_age = #{studentAge},</if>
            <if test="studentClasses != null">student_Classes = #{studentClasses},</if>
            <if test="studentTeacher != null">student_teacher = #{studentTeacher},</if>
            <if test="studentSex != null">student_sex = #{studentSex},</if>
            <if test="studentStatus != null">student_status = #{studentStatus},</if>
            <if test="studentBirthday != null">student_birthday = #{studentBirthday},</if>
        </trim>
        where student_id = #{studentId}
    </update>

    <delete id="deletePyzxStudentByStudentId" parameterType="Long">
        delete from pyzx_student where student_id = #{studentId}
    </delete>

    <delete id="deletePyzxStudentByStudentIds" parameterType="String">
        delete from pyzx_student where student_id in 
        <foreach item="studentId" collection="array" open="(" separator="," close=")">
            #{studentId}
        </foreach>
    </delete>

</mapper>